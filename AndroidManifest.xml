<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.josephhopson.pivotal.tracker.dashboard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.josephhopson.agiledashboard.DashboardActivity"
            android:label="@string/title_activity_dashboard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<provider
			android:name="com.josephhopson.pivotal.tracker.service.provider.TrackerServiceProvider"
			android:authorities="com.josephhopson.pivotal.tracker.service"
			android:exported="false"
			android:multiprocess="true" >
		</provider>
		
		<service android:name="com.josephhopson.pivotal.tracker.service.projects.ProjectsIntentService"></service>
		<service android:name="com.josephhopson.pivotal.tracker.service.recentactivity.RecentActivityIntentService"></service>
		<service android:name="com.josephhopson.pivotal.tracker.service.authentication.AuthenticationIntentService"></service>
		
    </application>
</manifest>